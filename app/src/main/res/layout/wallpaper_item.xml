<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.Material3.CardView.Elevated"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:gravity="center|top"
            android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/name"
                    style="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:text="TextView" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/preview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:scaleType="center"
                            app:shapeAppearanceOverlay="@style/WallpaperImage.Corner" />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/clear"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/preview"
                            android:layout_alignRight="@+id/preview"
                            app:iconSize="24dp"
                            app:icon="@drawable/delete_48px" />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/set"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/clear"
                            android:layout_alignBottom="@+id/clear"
                            app:iconSize="24dp"
                            app:icon="@drawable/wallpaper_48px" />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/choose"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/set"
                            android:layout_alignBottom="@+id/set"
                            app:iconSize="24dp"
                            app:icon="@drawable/upload_48px" />
                </RelativeLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/time"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp" />
        </LinearLayout>
</com.google.android.material.card.MaterialCardView>
